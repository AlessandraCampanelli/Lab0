<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab0.FXMLController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="USERNAME">
                     <HBox.margin>
                        <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtUsername" promptText="INSERISCI USERNAME">
                     <HBox.margin>
                        <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="83.0" text="PASSWORD">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtPassword" promptText="INSERISCI PASSWORD">
                     <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAccedi" mnemonicParsing="false" onAction="#Accesso" prefHeight="50.0" prefWidth="57.0" text="ACCEDI">
               <VBox.margin>
                  <Insets left="120.0" />
               </VBox.margin>
            </Button>
            <TextArea fx:id="txtMessaggio" prefHeight="175.0" prefWidth="292.0" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
